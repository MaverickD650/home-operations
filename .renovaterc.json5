{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    'github>MaverickD650/home-ops//.renovate/autoMerge.json5',
    'github>MaverickD650/home-ops//.renovate/changelogs.json5',
    'github>MaverickD650/home-ops//.renovate/customManagers.json5',
    'github>MaverickD650/home-ops//.renovate/grafanaDashboards.json5',
